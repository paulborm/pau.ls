<!doctype html>
<html lang="de">
  {% include "head.njk" %}

  <body class="page {{ bodyClass | join(" ") }}">
    {% block header %}
      {% include "header.njk" %}
    {% endblock %}

    <main class="page-main">
      {{ content | safe }}
    </main>

    {% block footer %}
      {% include "footer.njk" %}
    {% endblock %}

    <script>
      "use strict";

      document.documentElement.style.setProperty(
        "--header-height",
        `${document.querySelector('[data-id="page-header"]').getBoundingClientRect().height}px`
      );
    </script>
  </body>
